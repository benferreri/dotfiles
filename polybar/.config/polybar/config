ramp-signal-0 = "%{A1:nm-connection-editor:} %{T3}直%{T-} %{A}"
ramp-signal-1 = "%{A1:nm-connection-editor:} %{T3}直%{T-} %{A}"
ramp-signal-2 = "%{A1:nm-connection-editor:} %{T3}直%{T-} %{A}"

