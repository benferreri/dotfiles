format-disconnected =

ramp-signal-0 = "  %{T5}Óàò%{T-}"
ramp-signal-1 = "  %{T5}Óàô%{T-}"
ramp-signal-2 = "  %{T5}Óàö%{T-}"

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = "ÓÜú "
format-connected-prefix-foreground = ${colors.mod-frg}
label-connected = %local_ip%

format-disconnected =

[module/date]
type = internal/date
interval = 1

date =
date-alt = "%Y-%m-%d"

time = "%I:%M %p"
time-alt = "%H:%M:%S"

label = "%date% %time%"
label-background = ${colors.mod-bkg}
label-foreground = ${colors.mod-frg}

[module/pulseaudio]
type = internal/pulseaudio

format-volume-foreground = ${colors.mod-frg}
format-volume-background = ${colors.mod-bkg}
format-volume = <label-volume> <bar-volume>
label-volume = " %{T3}ÔÄ®%{T-} %percentage%% "

label-muted-foreground = ${colors.mod-frg}
label-muted-background = ${colors.mod-bkg}
label-muted = "  üîá  "

bar-volume-width = 10
