[colors]
bar-bkg = ${xrdb:color0:#222}
bar-frg = ${xrdb:color6:#222}
mod-bkg = ${xrdb:color3:#222}
mod-frg = ${xrdb:color2:#222}
primary = ${xrdb:color7:#222}
secondary = ${xrdb:color1:#222}
alert = ${xrdb:color4:#222}

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
enable-scroll = false

label-mode-padding = 1
label-mode-foreground = #000
label-mode-background = ${colors.primary}

label-focused = %index%
label-focused-background = ${colors.primary}
label-focused-foreground = ${colors.mod-frg}
label-focused-underline = ${colors.primary}
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-padding = 1
label-unfocused-background = ${colors.mod-bkg}
label-unfocused-foreground = ${colors.mod-frg}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

[module/cpu]
type = internal/cpu
interval = 2
format-foreground = ${colors.mod-frg}
format-background = ${colors.mod-bkg}
format-underline = #f90000
label = " Óâ¶ %percentage:02%%  "
label-background = ${colors.mod-bkg}
label-foreground = ${colors.mod-frg}

[module/memory]
type = internal/memory
interval = 2
format-foreground = ${colors.mod-frg}
format-background = ${colors.mod-bkg}
format-underline = #4bffdc
label = "Ô°ö %percentage_used:02%%  "

[module/wlan]
type = internal/network
interface = wlp4s0
interval = 3.0

format-connected-background = ${colors.mod-bkg}
format-connected-foreground = ${colors.mod-frg}
format-connected = <ramp-signal> <label-connected>
format-connected-underline = #9f78e1
